<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowApartmentID">

    <include layout="@layout/actionbar_app"
        android:id="@+id/action_barShow" />

    <TextView
        android:id="@+id/txtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@id/action_barShow"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:text="Your ApartmentID Given Below"/>

    <TextView
        android:id="@+id/txtApartmentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@id/txtV"
        android:layout_marginTop="100dp"
        android:layout_marginStart="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        />

</RelativeLayout>