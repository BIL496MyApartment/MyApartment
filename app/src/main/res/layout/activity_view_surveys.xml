<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSurveys">

    <include layout="@layout/actionbar_app"
        android:id="@+id/action_barSurvey" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_barSurvey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/linearlayout"
        android:id="@+id/textviewSurveys"
        android:text="Surveys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:paddingBottom="30dp"
        android:layout_below="@+id/textviewSurveys"
        android:id="@+id/viewSurveys"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>